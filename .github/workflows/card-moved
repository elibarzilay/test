#!/usr/bin/env bash

. "$(dirname "$0")/shared.sh"

login

get_PROJs

FROM="$(col "$(ctx ".event.changes.column_id.from")")"
TO="$(col "$(ctx ".event.project_card.column_id")")"
WHO="$(ctx ".event.sender.login")"
if [[ "$FROM" = "$TO" ]]; then exit 0; fi

content="$(ctx ".event.project_card.content_url")"
if [[ "$content" = "null" ]]; then exit 0; fi
content="$(api "$content")"
NUM="$(jget "$content" .number)"

echo "#$NUM card moved by @$WHO: $FROM -> $TO"

STATE="$(jget "$content" .state)"
if [[ "$TO" = "$COL3" && "$STATE" = "open" ]]; then
  echo "  Closing"
  gh issue close "$NUM"
elif [[ "$FROM" = "$COL3" && "$STATE" != "open" ]]; then
  echo "  Re-openning"
  gh issue reopen "$NUM"
fi

ASSIGNEE="$(jget "$content" .assignee)"

exit 0

