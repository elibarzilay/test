#!/usr/bin/env bash

. "$(dirname "$0")/shared.sh"

login

get_PROJs

FROM="$(col "$(ctx ".event.changes.column_id.from")")"
TO="$(col "$(ctx ".event.project_card.column_id")")"
WHO="$(ctx ".event.sender.login")"

echo "Card moved by @$WHO: $FROM -> $TO"

content="$(ctx ".event.project_card.content_url")"
if [[ "$content" = "null" ]]; then
  content=""
else
  content="$(api "$content")"
fi

echo "{$content}"
